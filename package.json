{
  "name": "murder-mystery-app",
  "version": "2.0.0",
  "description": "マーダーミステリー制作支援ツール - 最適化版",
  "main": "index.js",
  "scripts": {
    "dev": "node api/index.js",
    "build": "echo '✅ Build successful - Vercel deployment'",
    "start": "node api/index.js",
    "test": "jest",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js",
    "deploy": "vercel --prod",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "audit": "npm audit fix",
    "db:setup": "node scripts/quick-setup.js",
    "db:check": "node -e \"import('./api/supabase-client.js').then(m => m.testSupabaseConnection().then(console.log))\"",
    "check-env": "node scripts/check-env-vars.js",
    "pre-deploy": "node scripts/check-env-vars.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "dotenv": "^17.2.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "murder-mystery",
    "ai-generator",
    "scenario-generator",
    "mystery-game"
  ],
  "author": "AI System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yannsunn/murder-mystery-generator.git"
  }
}
