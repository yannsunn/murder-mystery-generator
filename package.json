{
  "name": "murder-mystery-app",
  "version": "1.0.0",
  "description": "マーダーミステリー制作支援ツール",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'Build completed - Static files ready'",
    "vercel-build": "node scripts/production-build.js",
    "prebuild": "node scripts/pre-build-checks.js || true",
    "postbuild": "node scripts/post-build-optimization.js || true",
    "deploy": "npm run vercel-build && netlify deploy --prod",
    "test": "node scripts/run-tests.js || true",
    "test:security": "node scripts/security-audit.js || true",
    "validate": "node scripts/validate-config.js || true",
    "push": "./scripts/auto-push.sh",
    "quick-push": "git add . && git commit -m '⚡ Quick update' && git push origin main",
    "smart-push": "npm run push",
    "production-deploy": "npm run validate && npm run test && npm run vercel-build && netlify deploy --prod"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0"
  }
}
